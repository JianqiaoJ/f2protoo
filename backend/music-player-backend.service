[Unit]
Description=Music Player Backend (f2proto)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/music-player-backend
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=5
StandardOutput=append:/opt/music-player-backend/backend.log
StandardError=append:/opt/music-player-backend/backend.log

[Install]
WantedBy=multi-user.target
